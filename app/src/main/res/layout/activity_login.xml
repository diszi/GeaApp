    <TextView
        android:id="@+id/text_appversion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"/>

        <TextView
        android:id="@+id/text_appname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:fontFamily="Arial"
        android:text="@string/app_name"
        android:textSize="17sp"
        android:layout_gravity="end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_appversion"/>

    <LinearLayout
        android:id="@+id/linearLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteY="124dp">




        <ImageView
            android:id="@+id/imageview_acelogo"
            android:layout_width="220dp"
            android:layout_height="190dp"
            android:src="@mipmap/ic_launcher_foreground"
            android:contentDescription="ace_icon"/>


        <EditText
            android:id="@+id/inputtext_username"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="Azonosító"
            android:text="maxadmin"
            android:inputType="textCapCharacters"
            android:nextFocusDown="@id/inputtext_password"
            android:background="@drawable/edittext_shape"
            android:layout_marginTop="30dp"
            android:paddingLeft="12dp" />


        <EditText
            android:id="@+id/inputtext_password"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:hint="Jelszó"
            android:text="He11oo70."
            android:background="@drawable/edittext_shape"
            android:paddingLeft="12dp"
            android:layout_marginTop="20dp"

            />

        <Button
            android:id="@+id/button_login"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_default"
            android:text="Belépés"
            android:textColor="@android:color/background_light"
            android:layout_marginTop="20dp"/>


        <Switch
            android:id="@+id/switch_selectSim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:paddingRight="53dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:text="SIM  "
            android:layout_gravity="end"
            android:textSize="14sp"
            tools:ignore="UseSwitchCompatOrMaterialXml"
            app:layout_constraintTop_toBottomOf="@id/linearLayoutContent"
            app:layout_constraintRight_toRightOf="parent"/>
    </LinearLayout>




    <ProgressBar
        android:id="@+id/progressbar_login"
        style="?android:attr/progressBarStyle"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


