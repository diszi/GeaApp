<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.inspection.activity.InspectionMainActivity">



    <FrameLayout
        android:id="@+id/frame_main_inspection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomnav_main_insp"
        android:layout_alignParentTop="true"

        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav_main_insp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        app:itemIconTint="@drawable/bottomnav_color"
        app:itemTextColor="@drawable/bottomnav_color"
        app:menu="@menu/inspection"
        app:labelVisibilityMode="labeled"
        android:background="@color/colorPrimary"
        >
<!--        android:foreground="?attr/selectableItemBackground"-->
<!--        app:itemBackground="@color/colorPrimary"-->
<!--        app:itemIconTint="@android:color/white"-->
<!--        app:itemTextColor="@android:color/white"-->
        <!--        android:background="?android:attr/windowBackground"-->

    </com.google.android.material.bottomnavigation.BottomNavigationView>


</RelativeLayout>