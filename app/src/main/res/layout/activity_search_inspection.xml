<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.main.SearchActivity">

    <ProgressBar
        android:id="@+id/actSearchVehicle_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />


    <LinearLayout
        android:id="@+id/linearlayout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:divider="@drawable/divider_vertical"
        android:showDividers="middle">

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gépjármű keresése"
            android:textAlignment="center"
            android:textSize="25dp"
            android:paddingTop="15dp">
        </TextView>


        <TextView
            android:id="@+id/textview_numberofvehicle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            ></TextView>
<!--        <ProgressBar-->
<!--            android:id="@+id/actSearchVehicle_progressBar"-->
<!--            style="@style/Widget.AppCompat.ProgressBar.Horizontal"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:indeterminate="true"-->

<!--            />-->

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchview_car"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:background="@drawable/searchview"
            android:layout_gravity="center"/>


<!--        <androidx.appcompat.widget.SearchView-->
<!--            android:id="@+id/searchview_car"-->
<!--            android:layout_width="500dp"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:tooltipText="Search..."-->
<!--            android:background="@color/colorItems"-->
<!--            android:layout_gravity="center"/>-->


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />

    </LinearLayout>



</RelativeLayout>